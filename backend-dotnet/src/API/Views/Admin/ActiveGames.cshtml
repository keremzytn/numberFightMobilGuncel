@model IEnumerable<Game>
@{
    ViewData["Title"] = "Aktif Oyunlar";
}

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-joystick"></i> Aktif Oyunlar</h1>
        <div>
            <span class="badge bg-success fs-5" id="activeCount">Aktif: @Model.Count()</span>
            <button class="btn btn-primary" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i> Yenile
            </button>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Şu anda aktif oyun bulunmuyor.
        </div>
    }
    else
    {
        <div class="row g-4" id="gamesContainer">
            @foreach (var game in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <strong><i class="bi bi-joystick"></i> Oyun #@game.Id.Substring(0, 8)</strong>
                            <span class="badge bg-light text-dark float-end">Round @game.CurrentRound/7</span>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                <div class="col-5">
                                    <h5>Oyuncu 1</h5>
                                    <div class="badge bg-primary fs-6">@game.Player1Score puan</div>
                                    @if (game.Player1Card.HasValue)
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-warning fs-4">@game.Player1Card</span>
                                        </div>
                                    }
                                </div>
                                <div class="col-2 d-flex align-items-center justify-content-center">
                                    <h3 class="mb-0">VS</h3>
                                </div>
                                <div class="col-5">
                                    <h5>Oyuncu 2</h5>
                                    <div class="badge bg-danger fs-6">@game.Player2Score puan</div>
                                    @if (game.Player2Card.HasValue)
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-warning fs-4">@game.Player2Card</span>
                                        </div>
                                    }
                                </div>
                            </div>

                            <hr>

                            <div class="small text-muted">
                                <div><i class="bi bi-clock"></i> Başlangıç: @game.CreatedAt.ToString("HH:mm:ss")</div>
                                @if (game.RoundStartTime.HasValue)
                                {
                                    <div><i class="bi bi-hourglass-split"></i> Son hamle: @((DateTime.UtcNow - game.RoundStartTime.Value).TotalSeconds.ToString("F0")) saniye önce</div>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Admin" asp-action="GameDetail" asp-route-id="@game.Id" 
                               class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> Detaylı Görünüm
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
<script>
    // Auto-refresh every 5 seconds
    setInterval(function() {
        location.reload();
    }, 5000);
</script>
}

