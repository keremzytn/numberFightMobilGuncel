@model Game
@{
    ViewData["Title"] = $"Oyun Detay - {Model.Id.Substring(0, 8)}";
}

<div class="py-4">
    <div class="mb-4">
        <a asp-controller="Admin" asp-action="Games" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-12">
            <div class="card">
                <div
                    class="card-header @(Model.Status == GameStatus.InProgress ? "bg-success" : "bg-secondary") text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-joystick"></i> Oyun #@Model.Id.Substring(0, 8)</h5>
                        <span class="badge bg-light text-dark">Round @Model.CurrentRound/7</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-4">
                        <div class="col-md-5">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3>Oyuncu 1</h3>
                                    <p class="text-muted small mb-2">@Model.Player1Id.Substring(0, 8)...</p>
                                    <h1 class="display-4 text-primary">@Model.Player1Score</h1>
                                    <p class="text-muted">puan</p>

                                    @if (Model.Player1Card.HasValue)
                                    {
                                        <div class="mt-3">
                                            <span class="badge bg-warning fs-1">@Model.Player1Card</span>
                                            <p class="text-muted small mt-2">Seçilen Kart</p>
                                        </div>
                                    }

                                    <div class="mt-3">
                                        <strong>Kullanılan Kartlar:</strong><br>
                                        @if (Model.Player1UsedCards.Any())
                                        {
                                            @foreach (var card in Model.Player1UsedCards)
                                            {
                                                <span class="badge bg-secondary m-1">@card</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Henüz yok</span>
                                        }
                                    </div>

                                    <div class="mt-3">
                                        <strong>Yasaklı Kartlar:</strong><br>
                                        @if (Model.Player1ForbiddenCards.Any())
                                        {
                                            @foreach (var card in Model.Player1ForbiddenCards)
                                            {
                                                <span class="badge bg-danger m-1">@card</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Henüz yok</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2 d-flex align-items-center justify-content-center">
                            <h1 class="display-1">VS</h1>
                        </div>

                        <div class="col-md-5">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3>Oyuncu 2</h3>
                                    <p class="text-muted small mb-2">@Model.Player2Id.Substring(0, 8)...</p>
                                    <h1 class="display-4 text-danger">@Model.Player2Score</h1>
                                    <p class="text-muted">puan</p>

                                    @if (Model.Player2Card.HasValue)
                                    {
                                        <div class="mt-3">
                                            <span class="badge bg-warning fs-1">@Model.Player2Card</span>
                                            <p class="text-muted small mt-2">Seçilen Kart</p>
                                        </div>
                                    }

                                    <div class="mt-3">
                                        <strong>Kullanılan Kartlar:</strong><br>
                                        @if (Model.Player2UsedCards.Any())
                                        {
                                            @foreach (var card in Model.Player2UsedCards)
                                            {
                                                <span class="badge bg-secondary m-1">@card</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Henüz yok</span>
                                        }
                                    </div>

                                    <div class="mt-3">
                                        <strong>Yasaklı Kartlar:</strong><br>
                                        @if (Model.Player2ForbiddenCards.Any())
                                        {
                                            @foreach (var card in Model.Player2ForbiddenCards)
                                            {
                                                <span class="badge bg-danger m-1">@card</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Henüz yok</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="bi bi-info-circle"></i> Oyun Bilgileri</h5>
                            <table class="table table-sm">
                                <tbody>
                                    <tr>
                                        <td><strong>Durum:</strong></td>
                                        <td>
                                            @switch (Model.Status)
                                            {
                                                case GameStatus.Waiting:
                                                    <span class="badge bg-warning">Bekliyor</span>
                                                    break;
                                                case GameStatus.InProgress:
                                                    <span class="badge bg-success">Devam Ediyor</span>
                                                    break;
                                                case GameStatus.Completed:
                                                    <span class="badge bg-secondary">Tamamlandı</span>
                                                    break;
                                                case GameStatus.Cancelled:
                                                    <span class="badge bg-danger">İptal</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Kazanan:</strong></td>
                                        <td>
                                            @if (Model.WinnerId != null)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-trophy-fill"></i>
                                                    Player @(Model.WinnerId == Model.Player1Id ? "1" : "2")
                                                </span>
                                            }
                                            else if (Model.Status == GameStatus.Completed)
                                            {
                                                <span class="badge bg-warning">Berabere</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Henüz belli değil</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Başlangıç:</strong></td>
                                        <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                    </tr>
                                    @if (Model.RoundStartTime.HasValue)
                                    {
                                        <tr>
                                            <td><strong>Son Round:</strong></td>
                                            <td>@Model.RoundStartTime.Value.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h5><i class="bi bi-list-ol"></i> Hamle Geçmişi</h5>
                            @if (Model.Moves.Any())
                            {
                                <div class="list-group">
                                    @foreach (var move in Model.Moves.OrderBy(m => m.CreatedAt))
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <strong>Player:</strong> @move.PlayerId.Substring(0, 8)...
                                                </div>
                                                <span class="badge bg-primary">Kart: @move.Number</span>
                                            </div>
                                            <small class="text-muted">@move.CreatedAt.ToString("HH:mm:ss")</small>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> Henüz hamle kaydı bulunmuyor.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

